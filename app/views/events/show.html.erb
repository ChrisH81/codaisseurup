<% if current_user != @event.user %>
   <div class="panel panel-primary">
     <div class="panel-heading">Register</div>

     <div class="panel-body">
       <%= render 'registrations/form' %>
     </div>
   </div>
 <% end %>

<div class="panel panel-primary">
  <div class="panel-heading"><%= @event.name %></div>

  <div class="panel-body">

    <h4>Main Info</h4>
    <br />
    <p>Host: <%= current_user.has_profile? ? current_user.full_name : current_user.email  %></p>
    </p>
    <p>Location: <%= @event.location %></p>
    <p>Event Price: <%= @event.price == 0.0 ? "" : "â‚¬" %><%= @event.price == 0.0 ? "Free" : @event.price %></p>
    <p>Capacity: <%= @event.capacity %></p>

    <!-- About -->
    <br />
    <h4>About</h4>
    <br />
    <p><%= @event.description %></p>

    <br />
    <!-- Amenities -->
    <h4>Amenities</h4>
    <br />
    <ul class="amenities">
      <li><%= !@event.includes_food ? ("<s>Food</s>").html_safe : "Food" %></li>
      <li><%= !@event.includes_drinks ? ("<del>Drink</del>").html_safe : "Drink" %></li>
    </ul>

    <br />
    <h4>Categories</h4>
    <br />
      <% @categories.each do |category| %>
        <span class="label label-success"><%= category.name %></span>
      <% end %>

    <h4>Photos</h4>
      <% @event.photos.each do |photo| %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <%= image_tag photo.image.thumbnail %>
        </div>
      </div>
      <% end %>

  </div>

</div>

<%= link_to "Back", events_path, class: "btn btn-default" %>
